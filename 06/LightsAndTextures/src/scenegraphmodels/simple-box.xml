        <set>
            <translate>0 0 -5</translate>
        </set>

        <group name="Entire Brick">
            <transform>
                <set></set>

                <light name="Light">
                    <ambient>0.6 0.6 0.6</ambient>
                    <diffuse>0.0 0.0 0.2</diffuse>
                    <specular>0.0 0.0 0.4</specular>
