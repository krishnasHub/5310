<scene>
    <instance name="sphere" path="models/sphere"></instance>
    <instance name="box" path="models/box"></instance>
    <instance name="cylinder" path="models/cylinder"></instance>

    <transform>
        <set>
            <translate>0 0 -5</translate>
        </set>

        <group name="Entire Brick">
            <transform>
                <set>
                    <translate>0 0 5</translate>
                </set>

                <light name="Light">
                    <ambient>0.2 0.2 0.2</ambient>
                    <diffuse>1 1 1</diffuse>
                    <specular>1 1 1</specular>
                    <position>0 0 0</position>
                    <spotangle>180</spotangle>
                    <spotdirection>0 0 -1 </spotdirection>
                </light>
            </transform>


            <transform name="brick 1">
                <set>
                    <rotate>90 0 0 1</rotate>
                    <scale>60 30 20</scale>
                </set>
                <object instanceof="box">
                        <material>
                            <ambient>0.8 0.533 0</ambient>
                            <diffuse>0.8 0.533 0</diffuse>
                            <specular>0.8 0.533 0</specular>
                            <shininess>100</shininess>
                        </material>
                </object>
            </transform>


            <transform name="brick 2">
                <set>
                    <translate>0 0 -5</translate>
                    <scale>60 30 20</scale>
                </set>
                <object instanceof="box">


                    <material>
                        <ambient>0.2 0.2 0.6</ambient>
                        <diffuse>0.2 0.2 0.6</diffuse>
                        <specular>0.2 0.2 0.6</specular>
                        <shininess>100</shininess>
                    </material>
                </object>
            </transform>


        </group>

    </transform>


</scene>
