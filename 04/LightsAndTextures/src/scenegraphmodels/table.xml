<scene>
    <instance name="sphere" path="models/sphere"></instance>
    <instance name="box" path="models/box"></instance>
    <instance name="cylinder" path="models/cylinder"></instance>
    <instance name="cone" path="models/cone"></instance>
    <instance name="totem" path="models/totem"></instance>

    <transform name="Table Transform">
        <set>
            <translate>100 0 0</translate>
        </set>


    <group name="Entire Table">



        <light name="Light for the table">
            <ambient>0.2 0.2 0.2</ambient>
            <diffuse>0.2 0.2 0.2</diffuse>
            <specular>0.2 0.2 0.2</specular>
            <position>0 0 0</position>
        </light>

        <transform name="Table Top">
            <set>
                <scale>60 2 60</scale>
            </set>

            <object instanceof="box">
                <material>
                    <ambient>0.8 0.25 0</ambient>
                    <diffuse>0.5 0.25 0</diffuse>
                    <specular>0.8 0.6 0.6</specular>
                    <shininess>100</shininess>
                </material>



            </object>
        </transform>

        <transform name="Totem">
            <set>
                <translate>0 -2 20</translate>
                <scale>0.12 0.12 0.12</scale>
            </set>

            <object instanceof="totem">
                <material>
                    <color>0 0 1</color>
                </material>
            </object>
        </transform>


        <transform name="Mace">
            <set>
                <translate>-20 12 0</translate>
                <rotate>-20 0 1 0</rotate>
                <rotate>-101 0 0 1</rotate>
                <rotate>180 0 0 1</rotate>
                <scale>0.6 0.6 0.6</scale>
            </set>
            <group name="Entire Mace" from="scenegraphmodels/mace.xml"></group>
        </transform>

        <transform name="MJolnir">
            <set>
                <translate>15 8 -20</translate>
                <rotate>180 0 0 1</rotate>
                <scale>0.4 0.4 0.4</scale>
            </set>
            <group name="Entire Mjolnir" from="scenegraphmodels/mjolnir.xml"></group>
        </transform>

        <transform name="Pyramid">
            <set>
                <translate>-10 5 -20</translate>
                <scale>1 1 1</scale>
            </set>
            <group name="Entire Mjolnir" from="scenegraphmodels/pyramid.xml"></group>
        </transform>

        <transform name="Leg 1">
            <set>
                <translate>-20 -20 20</translate>
                <scale>2 40 2</scale>

            </set>

            <object instanceof="box">
                <material>
                    <color>1 0.61 0.30</color>
                </material>
            </object>
        </transform>


        <transform name="Leg 2">
            <set>
                <translate>20 -20 20</translate>
                <scale>2 40 2</scale>

            </set>

            <object instanceof="box">
                <material>
                    <color>1 0.61 0.30</color>
                </material>
            </object>
        </transform>

        <transform name="Leg 3">
            <set>
                <translate>-20 -20 -20</translate>
                <scale>2 40 2</scale>

            </set>

            <object instanceof="box">
                <material>
                    <color>1 0.61 0.30</color>
                </material>
            </object>
        </transform>


        <transform name="Leg 4">
            <set>
                <translate>20 -20 -20</translate>
                <scale>2 40 2</scale>

            </set>

            <object instanceof="box">
                <material>
                    <color>1 0.61 0.30</color>
                </material>
            </object>
        </transform>
    </group>
    </transform>
</scene>
