    <transform name="Table Transform">
        <set>
            <scale>2 2 2</scale>
            <translate>0 0 0</translate>
        </set>


    <group name="Entire Table">
        <light name="Table Light">
            <ambient>0.03 0.03 0.03</ambient>
            <diffuse>0.8 0.0 0.0</diffuse>
            <specular>0.8 0.0 0.0</specular>
            <position>-10 20 10 </position>
            <spotangle>40</spotangle>
            <spotdirection>0 -1 0 </spotdirection>
        </light>

        <transform name="Table Top">
            <set>
                <scale>60 2 60</scale>
            </set>

            <object instanceof="box">
                <material>
                    <ambient>1 1 1</ambient>
                    <diffuse>1 1 1</diffuse>
                    <specular>1 1 1</specular>
                    <shininess>100</shininess>
                    <textureName>wood.png</textureName>
                </material>

                <light name="Table Light 2">
                    <ambient>0.3 0.3 0.3</ambient>
                    <diffuse>0.6 0.6 0.6</diffuse>
                    <specular>0.6 0.6 0.6</specular>
                    <position>0 20 0 </position>
                </light>

            </object>
        </transform>

        <light name="Table Light 1">
            <ambient>0.03 0.03 0.03</ambient>
            <diffuse>0.0 0.8 0.0</diffuse>
            <specular>0.0 0.8 0.0</specular>
            <position>0 20 0 </position>
            <spotangle>40</spotangle>
            <spotdirection>0 -1 0 </spotdirection>
        </light>

        <light name="Table Light 2">
            <ambient>0.03 0.03 0.03</ambient>
            <diffuse>0.0 0.0 0.8</diffuse>
            <specular>0.0 0.0 0.8</specular>
            <position>10 20 10 </position>
            <spotangle>40</spotangle>
            <spotdirection>0 -1 0 </spotdirection>
        </light>

