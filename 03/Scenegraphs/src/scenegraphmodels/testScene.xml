                        <rotate>90 0 1 0</rotate>
                    </set>
                    <group name="wholeScene">
                        <transform name="room1">
                            <set>
                            </set>
                            <group name="room1" from="scenegraphmodels/room.xml">
                            </group>
                        </transform>
                        <transform name="room2">
                            <set>
                                <translate>0 0 300</translate>
                                <rotate>180 0 1 0</rotate>
                            </set>
                            <group name="room2" from="scenegraphmodels/room.xml">
                            </group>
                        </transform>
                        <transform name="room3">
                            <set>
                                <translate>600 0 150</translate>
                                <rotate>-90 0 1 0</rotate>
                            </set>
                            <group name="room3" from="scenegraphmodels/room.xml">
