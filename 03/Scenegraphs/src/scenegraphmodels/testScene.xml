                        </transform>
                        <transform>
                            <set>
                                <translate>200 0 150</translate>
                            </set>
                            <group name="hallway1-2" from="scenegraphmodels/hallway.xml">
                            </group>
                        </transform>
                    </group>
                </transform>
            </group>
        </set>
    </transform>
