<scene>
    <instance name="sphere" path="models/sphere"></instance>
    <instance name="box" path="models/box"></instance>
    <instance name="cylinder" path="models/cylinder"></instance>
    <instance name="cone" path="models/cone"></instance>

    <transform name="The Y humanoid">
        <set>
            <translate>-90 -100 0</translate>
            <scale>72 72 72</scale>
        </set>
        <group name="Y-unit-height-humanoid" from="scenegraphmodels/Y-humanoid.xml"></group>
    </transform>

    <transform name="The M humanoid">
        <set>
            <translate>-30 -100 0</translate>
            <scale>72 72 72</scale>
        </set>
        <group name="M-unit-height-humanoid" from="scenegraphmodels/M-humanoid.xml"></group>
    </transform>

    <transform name="The C humanoid">
        <set>
            <translate>30 -100 0</translate>
            <scale>72 72 72</scale>
        </set>
        <group name="C-unit-height-humanoid" from="scenegraphmodels/C-humanoid.xml"></group>
    </transform>

    <transform name="The A humanoid">
        <set>
            <translate>90 -100 0</translate>
            <scale>72 72 72</scale>
        </set>
        <group name="A-unit-height-humanoid" from="scenegraphmodels/A-humanoid.xml"></group>
    </transform>
</scene>
